    #action is always placed at the top of the menu else it will give and error
    #that is code not found
    <record id="action_patients" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html"><p class="o_view_nocontent_smiling_face">
            Create  first Patient!
        </p></field>
    </record>

    <menuitem id="hospital_root" name="Hospital" sequence="0" web_icon="om_hospital,static/description/icon.png"/>
    <menuitem id="hospital_patient" name="Patients" parent="hospital_root" action="action_patients"/>


</odoo>